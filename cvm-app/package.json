{
  "name": "cvm-app",
  "private": true,
  "version": "2.7.3",
  "type": "module",
  "main": "electron/main-commonjs.cjs",
  "description": "CVM (Cosmetic Vending Machine) Kiosk Application",
  "homepage": "./",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:electron": "tsc --project tsconfig.node.json && tsc electron/main.ts --outDir dist-electron --target ES2020 --module ESNext --moduleResolution node --esModuleInterop --allowSyntheticDefaultImports --skipLibCheck",
    "preview": "vite preview",
    "electron": "wait-on tcp:5173 && cross-env NODE_ENV=development electron .",
    "electron:pack": "electron-builder",
    "electron:dev": "concurrently \"npm run dev\" \"npm run electron\"",
    "electron:kiosk": "cross-env ELECTRON=true npm run build && cross-env NODE_ENV=production electron electron/main-kiosk.js",
    "electron:kiosk-fixed": "cross-env ELECTRON=true npm run build && cross-env NODE_ENV=production electron electron/main-kiosk-fixed.cjs",
    "electron:kiosk-simple": "cross-env ELECTRON=true npm run build && node scripts/fix-paths.cjs && cross-env NODE_ENV=production electron electron/main-kiosk-simple.cjs",
    "electron:build": "npm run build && electron-builder",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux",
    "build:all": "npm run build && electron-builder --win --mac --linux",
    "build:kiosk": "npm run build && electron-builder --win --config.productName=\"CVM Kiosk\" --config.directories.output=release-kiosk",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "arduino:control": "node scripts/arduino-cursor-controller.js --interactive",
    "arduino:monitor": "node scripts/serial-monitor.js COM12 115200",
    "arduino:test": "node test-arduino-connection.js",
    "arduino:upload": "arduino-cli compile --fqbn arduino:avr:uno arduino-controller-optimized.ino && arduino-cli upload -p COM12 --fqbn arduino:avr:uno arduino-controller-optimized.ino"
  },
  "keywords": [
    "cvm",
    "cosmetic",
    "vending-machine",
    "electron",
    "react",
    "typescript"
  ],
  "author": "CVM Development Team",
  "license": "MIT",
  "dependencies": {
    "@electron-toolkit/utils": "^4.0.0",
    "@serialport/parser-readline": "^13.0.0",
    "@supabase/supabase-js": "^2.51.0",
    "clsx": "^2.0.0",
    "crypto-js": "^4.2.0",
    "dvm-core-sdk": "file:../dvm-core-sdk1",
    "i18next": "^23.5.0",
    "i18next-browser-languagedetector": "^7.1.0",
    "lucide-react": "^0.263.0",
    "pdf-to-printer": "^5.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^13.2.0",
    "react-router-dom": "^6.8.0",
    "serialport": "^13.0.0",
    "zustand": "^4.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/crypto-js": "^4.2.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.19.7",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "autoprefixer": "^10.4.15",
    "babel-jest": "^30.0.4",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "electron": "^34.0.0",
    "electron-auto-launch": "^5.0.7",
    "electron-builder": "^24.0.0",
    "electron-serve": "^2.1.1",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.6.0",
    "jest-environment-jsdom": "^30.0.4",
    "jest-transform-stub": "^2.0.0",
    "postcss": "^8.4.28",
    "prettier": "^3.0.0",
    "tailwindcss": "^3.3.3",
    "ts-jest": "^29.4.0",
    "typescript": "^5.0.2",
    "vite": "^4.4.5",
    "vite-plugin-electron": "^0.12.0",
    "vite-plugin-electron-renderer": "^0.14.5",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.cvm.app",
    "productName": "CVM Kiosk",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "signAndEditExecutable": false,
      "signingHashAlgorithms": []
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "CVM Kiosk",
      "include": "build/installer.nsh"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.icns",
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "entitlements": null,
      "entitlementsInherit": null
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/icon.png",
      "category": "Utility"
    },
    "extraMetadata": {
      "main": "dist-electron/main.js"
    }
  },
  "engines": {
    "node": ">=20.18.0"
  }
}